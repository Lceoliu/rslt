{
	"train_micro_batch_size_per_gpu": 4,
	"train_batch_size": 32,
	"gradient_accumulation_steps": 1,
	"optimizer": {
		"type": "AdamW",
		"params": {
			"lr": 0.0005,
			"betas": [0.9, 0.95],
			"eps": 1e-8,
			"weight_decay": 0.01
		}
	},
	"bf16": { "enabled": true },
	"fp16": { "enabled": false },
	"gradient_clipping": 1.5,
	"zero_optimization": {
		"stage": 2,
		"allgather_partitions": true,
		"reduce_scatter": true,
		"overlap_comm": true,
		"contiguous_gradients": true
	},
	"scheduler": {
		"type": "WarmupDecayLR",
		"params": {
			"warmup_min_lr": 0.0,
			"warmup_max_lr": 0.0005,
			"warmup_num_steps": 2500,
			"total_num_steps": 40000
		}
	},
	"wall_clock_breakdown": true
}

