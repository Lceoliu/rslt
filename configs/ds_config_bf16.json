{
  "train_batch_size": 32,
  "gradient_accumulation_steps": 1,
  "optimizer": {
    "type": "AdamW",
    "params": { "lr": 0.0005, "betas": [0.9, 0.999], "eps": 1e-8, "weight_decay": 0.01 }
  },
  "bf16": { "enabled": true },
  "fp16": { "enabled": false },
  "zero_optimization": { "stage": 1 },
  "scheduler": { "type": "WarmupLR", "params": { "warmup_min_lr": 1e-4, "warmup_max_lr": 3e-4, "warmup_num_steps": 1000 } }
}

